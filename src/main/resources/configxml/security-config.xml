<!--                         logout-url="/logout"-->
<!--                         delete-cookies="JSESSIONID"/>-->

    </security:http>

    <!-- Security Beans -->
    <bean id="unauthorizedEntryPoint" class="com.novko.security.UnauthorizedEntryPoint"/>
    <bean id="accessDeniedHandler" class="com.novko.security.AccessDeniedExceptionHandler"/>
    <bean id="encoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">
